@page "/NPCs"
@inherits NpcGeneratorComponent
@rendermode InteractiveServer
@using GameTools.Framework.Converters;

<PageTitle>Generate an NPC</PageTitle>

<div class="row">
    <h3 class="col-sm-12 col-md-8">Here's a completely random NPC.</h3>
    <button class="col-sm-12 col-md-4 btn btn-primary" @onclick="GenerateNpc">Do another one!</button>
</div>
<hr />
<h4>Species: @this.NPC.Species</h4>
@if(this.NPC.NpcName != string.Empty)
{
    <p>Name:  @this.NPC.NpcName</p>
}
<p>Gender:  @this.NPC.Gender (@this.NPC.Pronouns)</p>
<p>Age: @this.NPC.Age</p>
<p>Height: @this.NPC.Height  Weight: @this.NPC.Weight</p>
@if(this.NPC.GenAppearance != string.Empty)
{
    <p>@this.NPC.GenAppearance</p>
} else
{
    <p>@this.NPC.Appearance</p>
}
<hr />
<p>Background:  @this.NPC.History</p>
<hr />
<p>Profession: @this.NPC.Profession</p>
<hr/>
<div class="row">
    <h4 class="col-sm-12 col-md-8">Description</h4>
    <button class="col-sm-12 col-md-4 btn btn-primary"
            @onclick="OnAiButtonClick">
        Generate AI Description
    </button>
</div>
<div class="row">
    <p style="border:solid 1px black;">@this.NPC.TextDescription</p>
</div>